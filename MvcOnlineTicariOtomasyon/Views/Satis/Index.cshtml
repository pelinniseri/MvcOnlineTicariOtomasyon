@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table id="tbl" class="table table-bordered" style="margin-top: 20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Produkt</th>
            <th>Kunde</th>
            <th>Personal</th>
            <th>Anzahl</th>
            <th>Preis</th>
            <th>Gesamt</th>
            <th>Datum</th>
            <th>Detail</th>
            <th>Aktualisieren</th>



        </tr>
    </thead>
    @foreach (var k in Model)

    {

        <tr>
            <td>@k.Satisid</td>
            <td>@k.Urun.UrunAd</td>
            <td>@k.Cariler.CariAd @k.Cariler.CariSoyad</td>
            <td>@k.Personel.PersonelAd @k.Personel.PersonelSoyad</td>
            <td>@k.Adet</td>
            <td>@k.Fiyat</td>
            <td>@k.ToplamTutar</td>
            <td>@k.Tarih</td>


            <td><a href="/Satis/SatisGetir/@k.Satisid/" class="btn btn-warning">Aktualisieren</a></td>
            <td><a href="/Satis/SatisDetay/@k.Satisid/" class="btn btn-success" style="background-color:lightcoral">Detail</a></td>


        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-info">Neu verkaufen</a>



<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css" rel="stylesheet" />




<script>

    $('#tbl').DataTable({

        language: {

            info: "_TOTAL_ kayıttan _START_ - _END_ kayıt gösteriliyor.",

            infoEmpty: "Gösterilecek hiç kayıt yok.",

            loadingRecords: "Kayıtlar yükleniyor.",

            lengthMenu: "Sayfada _MENU_ kayıt göster",

            zeroRecords: "Tablo boş",

            search: "Arama:",

            infoFiltered: "(toplam _MAX_ kayıttan filtrelenenler)",

            buttons: {

                copyTitle: "Panoya kopyalandı.",

                copySuccess: "Panoya %d satır kopyalandı",

                copy: "Kopyala",

                print: "Yazdır",

            },



            paginate: {

                first: "İlk",

                previous: "Önceki",

                next: "Sonraki",

                last: "Son"

            },

        }

    });

</script>