@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Customer Name: @ViewBag.cari</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Sales ID</th>
        <th>Product</th>
        <th>Employees</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Date</th>
        
    </tr>


    @foreach (var x in Model)
    {
        
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>


        </tr>

    }


</table>


