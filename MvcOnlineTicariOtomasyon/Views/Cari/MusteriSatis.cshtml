@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "MusteriSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Kundenname: @ViewBag.cari</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Verkaufs-ID</th>
        <th>Produkt</th>
        <th>Mitarbeiter</th>
        <th>Preis</th>
        <th>Anzahl</th>
        <th>Gesamt</th>
        <th>Datum</th>
        <th>Drucken</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Satisid</td>
            <td>@x.Urun.UrunAd</td>
            <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
            <td>@x.Fiyat</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Drucken</a></td>
        </tr>

    }


</table>


