@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme</h2>
<br />
@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post,new { enctype = "multipart-form/data" }))
{

<div class="form-group">
    @Html.HiddenFor(x => x.Personelid)
    @Html.Label("Personal Name")
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })

    <br />
    @Html.Label("Personal Surname")
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    @Html.Label("Foto")
    <input type="file" name="PersonelGorsel" />
    <br />
    @Html.Label("Department")
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    <br />
    @Html.Label("Address")
    @Html.TextBoxFor(x => x.PersonelAdres, new { @class = "form-control" })
    <br />
    @Html.Label("Phone number")
    @Html.TextBoxFor(x => x.PersonelTel, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:yellowgreen">Update</button>
</div>
}


