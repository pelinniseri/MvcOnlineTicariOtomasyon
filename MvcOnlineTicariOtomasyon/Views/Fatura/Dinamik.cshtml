@model MvcOnlineTicariOtomasyon.Models.Siniflar.DinamikFatura
@{
    ViewBag.Title = "Dinamik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}








<br />
<br />

<div class="panel panel-default">

    <div class="panel-heading">

        <div class="row">

            <h2 class="panel-title pull-left" style="margin-left:10px;">

                <strong>Rechnungspositionsdetails</strong>

            </h2>

            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Rechnungserfassung</button>

        </div>

    </div>

    @foreach (var item in Model.deger1)

    {
        <div class="panel-body">

            <table class="table table-striped table-responsive">

                <tbody>

                    <tr>

                        <td>Seri Sıra No : @item.FaturaSeriNo @item.FaturaSiraNo </td>
                        <td>Kunden : @item.TeslimEden </td>
                        <td>Tarih : @item.FaturaTarih </td>
                        <td>Vergi Dairesi : @item.VergiDairesi </td>

                    </tr>

                    <tr>

                        <td colspan="4">

                            <table class="table table-bordered">

                                <tbody>

                                    <tr>

                                        <th>Erklaerung</th>

                                        <th>Anzahl</th>

                                        <th>Preis</th>
                                        <th>Betrag</th>



                                    </tr>

                                    @{

                                        var totalBill = 0;

                                    }

                                    @foreach (var order in Model.deger2.Where(x => x.Faturaid == item.Faturaid))

                                    {

                                        <tr>

                                            <td>@order.Aciklama</td>

                                            <td>@order.Miktar</td>

                                            <td>@order.BirimFiyat</td>
                                            <td>@order.Tutar</td>



                                        </tr>

                                        totalBill = totalBill + @Convert.ToInt32(order.Tutar);

                                    }

                                </tbody>

                            </table>

                            <span class="pull-right" style="margin-right:100px;"><strong>Totaler Rechnungsbetrag :  </strong> @totalBill</span>

                        </td>

                    </tr>

                </tbody>

            </table>

        </div>

    }





</div>

<div class="modal fade" id="newOrderModal">

    <div class="modal-dialog modal-lg" style=" width: 900px !important;">

        <div class="modal-content">

            <div class="modal-header">

                <a href="#" class="close" data-dismiss="modal">&times;</a>

                <h4>Neue Bestellung hinzufügen</h4>

            </div>

            <form id="NewOrderForm">

                <div class="modal-body">

                    @*Customer Details*@

                    <h5 style="color:#ff6347">Kundendetails</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="Faturaid" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Seriennummer

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="FaturaSeriNo" name="FaturaSeriNo" placeholder="Seriennummer" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                SıraNo

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="FaturaSiraNo" name="FaturaSiraNo" placeholder="Fatura Sira No" class="form-control" />

                            </div>
                        </div>
                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Datum

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="FaturaTarih" name="FaturaTarih" placeholder="Datum" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Steuerverwaltung

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="VergiDairesi" name="VergiDairesi" placeholder="Steuerverwaltung" class="form-control" />

                            </div>

                        </div>

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Uhr

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Saat" name="Saat" placeholder="Uhr" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Einreicher

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="TeslimEden" name="TeslimEden" placeholder="Einreicher" class="form-control" />

                            </div>

                        </div>
                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Lieferzone

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="TeslimAlan" name="TeslimAlan" placeholder="Lieferzone" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Gesamtsumme

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Toplam" name="Toplam" placeholder="Gesamtsumme" class="form-control" />

                            </div>

                        </div>

                    </div>



                    @*Order Details*@

                    <h5 style="margin-top:10px;color:#ff6347">Rechnungspositionen</h5>

                    <hr />

                    <div class="form-horizontal">

                        <input type="hidden" id="id" />

                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Produktname

                            </label>

                            <div class="col-md-4">

                                <input type="text" id="Aciklama" name="Aciklama" placeholder="Produktname" class="form-control" />

                            </div>

                            <label class="control-label col-md-2">

                                Preis

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="BirimFiyat" name="BirimFiyat" placeholder="Preis" class="form-control" />

                            </div>

                        </div>



                        <div class="form-group">

                            <label class="control-label col-md-2">

                                Anzahl

                            </label>

                            <div class="col-md-4">

                                <input type="number" id="Miktar" name="Miktar" placeholder="Anzahl" class="form-control" />

                            </div>



                            <div class="col-md-2 col-lg-offset-4">

                                <a id="addToList" class="btn btn-primary">Zur Liste fügen</a>

                            </div>

                        </div>



                        <table id="detailsTable" class="table">

                            <thead>

                                <tr>

                                    <th style="width:30%">Produkt</th>

                                    <th style="width:20%">Stückpreis</th>

                                    <th style="width:15%">Anzahl</th>

                                    <th style="width:25%">Betrag</th>



                                </tr>

                            </thead>

                            <tbody></tbody>

                        </table>

                    </div>

                </div>

                <div class="modal-footer">

                    <button type="reset" class="btn btn-default" data-dismiss="modal">Abschließen</button>

                    <button id="saveOrder" type="submit" class="btn btn-danger">Bestellung speichern</button>

                </div>

            </form>

        </div>

    </div>

</div>


@section scripts{

    <script>

        //Show Modal.

        function addNewOrder() {

            $("#newOrderModal").modal();

        }

        //Add Multiple Order.

        $("#addToList").click(function (e) {

            e.preventDefault();



            if ($.trim($("#Aciklama").val()) == "" || $.trim($("#BirimFiyat").val()) == "" || $.trim($("#Miktar").val()) == "") return;



            var urun = $("#Aciklama").val(),

                Fiyat = $("#BirimFiyat").val(),

                Adet = $("#Miktar").val(),

                detailsTableBody = $("#detailsTable tbody");



            var productItem = '<tr><td>' + urun + '</td><td>' + Adet + '</td><td>' + Fiyat + '</td><td>' + (parseFloat(Fiyat) * parseInt(Adet)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';

            detailsTableBody.append(productItem);

            clearItem();

        });

        //After Add A New Order In The List, Clear Clean The Form For Add More Order.

        function clearItem() {

            $("#Aciklama").val('');

            $("#BirimFiyat").val('');

            $("#Miktar").val('');

        }

        // After Add A New Order In The List, If You Want, You Can Remove It.

        $(document).on('click', 'a.deleteItem', function (e) {

            e.preventDefault();

            var $self = $(this);

            if ($(this).attr('data-itemId') == "0") {

                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {

                    $(this).remove();

                });

            }

        });

        //After Click Save Button Pass All Data View To Controller For Save Database

        function saveOrder(data) {

            return $.ajax({

                contentType: 'application/json; charset=utf-8',

                dataType: 'json',

                type: 'POST',

                url: "/Fatura/FaturaKaydet",

                data: data,

                success: function (result) {

                    alert(result);

                    location.reload();

                },

                error: function () {

                    alert("Error!")

                }

            });

        }

        //Collect Multiple Order List For Pass To Controller

        $("#saveOrder").click(function (e) {

            e.preventDefault();



            var orderArr = [];

            orderArr.length = 0;



            $.each($("#detailsTable tbody tr"), function () {

                orderArr.push({

                    Aciklama: $(this).find('td:eq(0)').html(),

                    Miktar: $(this).find('td:eq(1)').html(),

                    BirimFiyat: $(this).find('td:eq(2)').html(),

                    Tutar: $(this).find('td:eq(3)').html()

                });

            });





            var data = JSON.stringify({

                FaturaSeriNo: $("#FaturaSeriNo").val(),
                FaturaSiraNo: $("#FaturaSiraNo").val(),
                FaturaTarih: $("#FaturaTarih").val(),
                Saat: $("#Saat").val(),
                VergiDairesi: $("#VergiDairesi").val(),
                TeslimEden: $("#TeslimEden").val(),
                TeslimAlan: $("#TeslimAlan").val(),
                Toplam: $("#Toplam").val(),
                

                kalemler: orderArr

            });



            $.when(saveOrder(data)).then(function (response) {

                console.log(response);

            }).fail(function (err) {

                console.log(err);

            });

        });

    </script>

}


