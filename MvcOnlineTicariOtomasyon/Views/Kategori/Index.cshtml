@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px">
    <tr>
        <th>ID</th>
        <th>Kategoriename</th>
        <th>Löschen</th>
        <th>Aktualisieren</th>
        
    </tr>

    @foreach(var k in Model)
            {
                <tr>
                    <td>@k.KategoriID</td>
                    <td>@k.KategoriAd</td>
                    <td><a href="/Kategori/KategoriSil/@k.KategoriID/" class="btn btn-danger">Löschen</a></td>
                    <td><a href="/Kategori/KategoriGetir/@k.KategoriID/" class="btn btn-success">Aktualisieren</a></td>
                    
                    
                </tr>
            }
</table>

<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategorie hinzufügen</a>

