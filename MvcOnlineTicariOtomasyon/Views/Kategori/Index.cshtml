@using MvcOnlineTicariOtomasyon.Models.Siniflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top: 20px">
    <tr>
        
        <th>Category name</th>
        <th>Delete</th>
        <th>Update</th>
        
    </tr>

    @foreach(var k in Model)
            {
                <tr>
                    
                    <td>@k.KategoriAd</td>
                    <td><a href="/Kategori/KategoriSil/@k.KategoriID/" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Kategori/KategoriGetir/@k.KategoriID/" class="btn btn-success">Update</a></td>
                    
                    
                </tr>
            }
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=> Url.Action("Index", new {sayfa}), new PagedListRenderOptions
{

    LiElementClasses = new List<string>

    {"page-link"}

})

<a href="/Kategori/KategoriEkle" class="btn btn-primary">Add category</a>

