@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Personal Sales Department</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personal name: @ViewBag.dp</li>
</ol>
<table class="table table-condensed">
    <tr>
        
        <th>Product</th>
        <th>Customer</th>
        <th>Price ₺</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Date</th>
        <th>Press</th>
    </tr>
    
        @foreach(var x in Model)
            {
            <tr>
                
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Fiyat ₺</td>            
                <td>@x.Adet</td>            
                <td>@x.ToplamTutar</td>            
                <td>@x.Tarih</td>            
                <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Press</a></td>            
            </tr>

            }
    
    
</table>

