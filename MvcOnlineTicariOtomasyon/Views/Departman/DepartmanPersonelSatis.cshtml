@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Abteilung Personalvertrieb</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personal Name: @ViewBag.dp</li>
</ol>
<table class="table table-condensed">
    <tr>
        <th>Verkaufs-ID</th>
        <th>Produkt</th>
        <th>Kunde</th>
        <th>Preis</th>
        <th>Anzahl</th>
        <th>Gesamt</th>
        <th>Datum</th>
        <th>Drucken</th>
    </tr>
    
        @foreach(var x in Model)
            {
            <tr>
                <td>@x.Satisid</td>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cariler.CariAd @x.Cariler.CariSoyad</td>
                <td>@x.Fiyat</td>            
                <td>@x.Adet</td>            
                <td>@x.ToplamTutar</td>            
                <td>@x.Tarih</td>            
                <td><a href="#" class="btn btn-default" style="background-color:dodgerblue">Drucken</a></td>            
            </tr>

            }
    
    
</table>

