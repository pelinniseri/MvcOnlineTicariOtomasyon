@model MvcOnlineTicariOtomasyon.Models.Siniflar.Cariler

@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{


<form class="form-horizontal">

    @Html.HiddenFor(x=>x.Cariid)
    <div class="form-group row">

        <label for="inputName" class="col-sm-2 col-form-label">First name</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputEmail" class="col-sm-2 col-form-label">Last name</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputName2" class="col-sm-2 col-form-label">E-mail</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputExperience" class="col-sm-2 col-form-label">City</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <label for="inputSkills" class="col-sm-2 col-form-label">Password</label>

        <div class="col-sm-10">

            @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <div class="checkbox">

                <label>

                    <input type="checkbox">I want to change my password.

                </label>

            </div>

        </div>

    </div>

    <div class="form-group row">

        <div class="offset-sm-2 col-sm-10">

            <button type="submit" class="btn btn-danger">Save changes</button>

        </div>

    </div>

</form>
}
